@attribute [Authorize]
@page "/journal"

@rendermode InteractiveServer
@* without this, website is static and not responsive *@
@* what happens (tldr): client sent server an event -> server process event 
-> send new HTML after event (generally just the part that rerenders) -> client see change *@

@inject NavigationManager NavManager
@inject JournalService JournalService
@inject JournalStateService JournalStateService

<PageTitle>Journal</PageTitle>

<div class="main-journal-container">
    <div class="journal-header">
        <div class="header-title">
            <div class="title-date">
                <h1 class="date">@_selectedDate.ToString("dddd, MMMM dd yyyy")</h1>
                <span class="dropdown"></span>
            </div>
            <div class="title-controller">
                <button class="save" @onclick="SaveJournal">
                    Save Journal
                </button>
            </div>
        </div>
        <div class="header-controller">
            <a class="navigation" id="navigation-prev" @onclick="Previous">
                &lt Previous
            </a>
            <a class="navigation" id="navigation-next" @onclick="Next">
                Next &gt </a>
        </div>
    </div>

    <div class="journal-contents">
        <TextEditor @bind-Content="_journalContent" @bind-Title="_journalTitle" @key="_selectedDate" />
        <Chatbox @bind-Messages="_messages" @bind-Summary="_journalSummary" OnSave="HandleSave" />
    </div>

    <div @ref="_saveMessage" class="saving-message">Saving...</div>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    @* = default!; exists to ensure the compiler that we will always get AuthState (if not, gives a warning saying it 
        may be null even though *technically* it will not) *@
    private ClaimsPrincipal? _user;
    private string? _userId;

    [Parameter]
    [SupplyParameterFromQuery(Name = "date")]
    public string? QueryDate { get; set; }

    private int _journalId;
    private string _journalTitle = String.Empty;
    private string _journalContent = String.Empty;
    private string _journalSummary = String.Empty;
    private List<ConversationMessage> _messages = new();
    private DateTime _selectedDate;
    private ElementReference _saveMessage;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationState? authState = await AuthState;
        _user = authState.User;
        _userId = _user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    }

    protected override async Task OnParametersSetAsync()
    {
        if (_userId == null) return;

        _selectedDate = GetQueryDate();
        JournalEntry? entry = await JournalService.GetEntryForUser(_userId, _selectedDate);

        if (entry != null)
        {
            _journalContent = entry.Content;
            _journalTitle = entry.Title;
            _journalSummary = entry.Summary;
            _journalId = entry.Id;

            var conversationMessages = await JournalService.GetAllConversationMessage(_journalId);

            if (conversationMessages != null) _messages = conversationMessages;
        }
        else
        {
            _journalContent = String.Empty;
            _journalTitle = String.Empty;
            _journalSummary = String.Empty;
            _journalId = 0;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && _journalId != 0 && _journalSummary != null)
        {
            await JournalStateService.SetJournalInfoAsync(_journalId, _journalSummary);
        }
    }

    private DateTime GetQueryDate()
    {
        DateTime date;
        Console.WriteLine("Date: " + QueryDate);

        if (QueryDate != null && DateTime.TryParse(QueryDate, out DateTime parsedDate))
        {
            date = DateTime.SpecifyKind(parsedDate.Date, DateTimeKind.Utc);
            // check if the date is ahead of current date
            if (date > DateTime.UtcNow)
            {
                date = DateTime.UtcNow;
                NavManager.NavigateTo("/journal");
            }
        }
        else
        {
            date = DateTime.UtcNow;
        }

        return date;
    }

    protected void Previous()
    {
        _selectedDate = _selectedDate.AddDays(-1);
        string formattedDate = _selectedDate.ToString("yyy-MM-dd");

        NavManager.NavigateTo($"/journal?date={formattedDate}");
    }

    protected void Next()
    {
        _selectedDate = _selectedDate.AddDays(1);
        string formattedDate = _selectedDate.ToString("yyy-MM-dd");

        NavManager.NavigateTo($"/journal?date={formattedDate}");
    }

    protected async Task SaveJournal()
    {
        await ShowSavingMessage("Saving...");
        JournalEntry entry = await JournalService.SaveOrUpdateAndSummarizeAsync(_userId!, _journalTitle,
        _journalContent, _selectedDate);
        await ShowSavingMessage("Saved!", 2000);
        await JournalService.CreateConversation(_userId!, entry.Id);

        if (_journalId != entry.Id || JournalStateService.JournalId != entry.Id)
        {
            await JournalStateService.SetJournalInfoAsync(entry.Id, entry.Summary);
        }
    }

    protected async Task ShowSavingMessage(string message, int duration = 1000)
    {
        await JS.InvokeVoidAsync("Journal.showSaveMessage", _saveMessage, message, duration);
    }
    [Inject] private IJSRuntime JS { get; set; } = default!;
}