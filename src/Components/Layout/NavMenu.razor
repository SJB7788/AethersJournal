@rendermode InteractiveServer
@inject SignInManager<User> _signinManager
@inject UserManager<User> _userManager
@inject NavigationManager NavManager

<div class="top-navbar">
    <div class="top-nav-item">
        <a class="navbar-brand" href="">
            <img src="/assets/logo.png" alt="AethersJournal">
        </a>
    </div>
</div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-list-calendar-nav-menu" aria-hidden="true"></span> Calendar
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="journal">
                <span class="bi bi-list-journal-nav-menu" aria-hidden="true"></span> Journal
            </NavLink>
        </div>

        <div class="nav-item px-3" @onclick="OnLogout">
            <button class="nav-link">
                <span class="bi bi-list-journal-nav-menu" aria-hidden="true"></span> Logout
            </button>
        </div>
    </nav>
</div>

@code {
    private void OnLogout() {
        Console.WriteLine("Home: Logout");
        NavManager.NavigateTo("/auth/process-logout", forceLoad: true);
    }
}